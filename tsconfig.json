{
  "compilerOptions": {
    "types": [
      "@babel/core",
      "@types/node",
      "@types/react",
      "@types/react-dom",
      "next",
      "next/types/global",
      "next/types",
      //jest
      "@types/jest",
      "jest"
    ],
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/api/mindmaps/mindmap.js"
  ],
  "exclude": ["node_modules"]
}
