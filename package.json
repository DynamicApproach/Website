{
  "name": "thomaslloyd-jones",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "next": "next dev --turbo",
    "lint": "next lint",
    "eslint": "eslint . --fix",
    "fix": "eslint --fix . && prettier --write .",
    "prettier": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci",
    "test:debug": "node --inspect server.js",
    "test:update": "jest --updateSnapshot",
    "test:verbose": "jest --verbose",
    "clean": "rm -rf .next/ && rm -rf coverage/",
    "deploy": "docker build -t registry.digitalocean.com/dynamicapproach/website:main . && docker push registry.digitalocean.com/dynamicapproach/website:main"
  },
  "engines": {
    "node": ">=20.1.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ],
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
