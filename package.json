    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "framer-motion": "^11.11.11",
    "framer-motion-3d": "^11.11.11",
    "google-auth-library": "^9.14.2",
    "locomotive-scroll": "^4.1.4",
    "markmap-lib": "^0.17.2",
    "markmap-view": "^0.17.2",
    "next": "^15.0.3",
    "openai": "^4.71.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-ga4": "^2.1.0",
    "react-locomotive-scroll": "^0.2.2",
    "sharp": "^0.33.5",
    "tailwind-styled-components": "^2.2.0",
    "tailwindcss": "^3.4.14",
    "three": "^0.170.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
